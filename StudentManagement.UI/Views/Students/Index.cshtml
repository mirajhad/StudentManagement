@model PagedResult<StudentManagement.Models.StudentViewModel>

<p>
    <a asp-action="Create" class="btn btn-info mt-3">Create New</a>
</p>
<h1>Student List</h1>
<table class="table">
    <thead>
        <tr>
          
            <th>
               StudentName
            </th>
            <th>
                UserName
            </th>
            <th>
               Contact
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                    @Html.ActionLink("Result", "Result", new { id=item.StudentId })             
            </td>
        </tr>
}
    </tbody>
</table>
